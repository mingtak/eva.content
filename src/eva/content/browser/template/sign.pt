<script>
$(document).ready(function(){
    $('#submit').click(function(){
        if( !($('#name').val() && $('#tel').val() && $('#email').val() &&  $('#where').val()) ){
            alert('請選擇出發地點並填寫所有欄位')
        }else{
            data = {name: $('#name').val(),
                    tel: $('#tel').val(),
                    email: $('#email').val(),
                    where: $('#where').val()
                   }
            $.post('${portal/absolute_url}/@@sign', data=data)
                .done(function(res){
                    if(res=='true'){
//                        alert('已完成資料登錄，祝您中大獎')
                        window.location.href = '${portal/absolute_url}/@@again'
                    }
                    if(res=='1'){
                        alert('請選擇出發地點並填寫所有欄位')
                    }else if(res=='2'){
                        alert('您的email已登錄過')
                    }
                }).fail(function(){
                    alert('資料傳送失敗，請稍候再試')
                })
        }
    })



    $('.where').click(function(){
        $('#where').val($(this).val())
        $('.where').css('background-color', '#28ab64')
        $(this).css('background-color', '#0d6d39')
    })
})


</script>



